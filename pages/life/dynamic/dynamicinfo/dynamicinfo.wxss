/* pages/life/dynamic/dynamicinfo/dynamicinfo.wxss */
@import "../../../../wxParse/wxParse.wxss";
.title-h3{
  font-size: 40rpx;
  font-weight: 600;
}
.img image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}
.name{
  font-size: 36rpx;
  margin: 15rpx 0 10rpx 0;
}
.duties{
  font-size: 30rpx;
  margin: 15rpx 0 10rpx 0;
  font-style:italic;
}
.explain{
  margin-top: 15rpx;
  color: rgb(102, 102, 102);
  letter-spacing: .5rpx;
  font-size: 32rpx;
  text-indent: 50rpx;
  line-height: 50rpx;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}