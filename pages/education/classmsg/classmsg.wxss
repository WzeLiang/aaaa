/* pages/education/activity/activity.wxss */

.classmsg {
  padding-bottom: 50rpx;
}

.tabnav {
  top: 0;
  position:sticky;
  display: flex;
  border-top: 1rpx solid rgb(229, 229, 229);
  border-bottom: 1rpx solid rgb(229, 229, 229);
  background-color: white;
}

.tabnav .tab-item {
  font-size: 33rpx;
  flex: auto;
  text-align: center;
  line-height: 45rpx;
  padding: 20rpx 0;
  border-right: 1rpx solid rgb(229, 229, 229);
}

.tabnav .tab-item:last-child {
  border-right: none;
}
.active {
  border-bottom: 4rpx solid rgb(119, 195, 41);
  color: rgb(119, 195, 41);
}
.tab-content {
  padding: 0 30rpx;
  margin: 20rpx 0;
}

.tab-content .content-item {
  border-bottom: 1rpx solid rgb(229, 229, 229);
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}

.tab-content .content-item .item-msg {
  line-height: 55rpx;
}

.tab-content .content-item .item-msg .msg-head {
  display: flex;
  justify-content: space-between;
}

.item-msg .msg-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpxï¼›;
}

.msg-list {
  padding: 0 0 30rpx 0;
}

.item-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.item-title .title-class {
  font-size: 38rpx;
}

.item-title .title-class text {
  margin-left: 10rpx;
  font-size: 32rpx;
}

.item-title .title-time {
  font-size: 30rpx;
}

.item-info {
  font-size: 32rpx;
  letter-spacing: 0.5rpx;
  line-height: 50rpx;
  word-break: break-all;
  /* white-space:pre-line; */
}

/* pages/education/home/home.wxss */

.swiper-item image {
  width: 100%;
}

.pro-box {
  display: flex;
  flex-flow: wrap;
  border-bottom: 1px solid rgb(229, 229, 229);
}

.pro-item {
  width: 187.5rpx;
  height: 200rpx;
  box-sizing: border-box;
  /* border: solid 1rpx red; */
  text-align: center;
  vertical-align: middle;
  font-size: 28rpx;
  color: rgb(102, 102, 102);
}

.pro-item image {
  margin-top: 30rpx;
  width: 80rpx;
  height: 80rpx;
}

.class-msg {
  padding: 30rpx 20rpx;
}

.class-msg .msg-head {
  line-height: 45rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}

.title-h3 {
  font-size: 40rpx;
  font-weight: 600;
}

.more {
  font-size: 30rpx;
  color: rgb(102, 102, 102);
}

.msg-content .content-item {
  border-bottom: 1rpx solid rgb(229, 229, 229);
  padding: 20rpx 0;
}

.msg-content .content-item .item-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.msg-content .content-item .item-title .title-classnumb {
  font-size: 37rpx;
}

.msg-content .content-item .item-title .title-date {
  font-size: 30rpx;
  vertical-align: text-bottom;
  line-height: 50rpx;
}

.msg-content .content-item .item-info {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* -webkit-line-clamp: 2; */
  overflow: hidden;
  font-size: 32rpx;
  letter-spacing: 0.5rpx;
  line-height: 50rpx;
}

.unread {
  position: relative;
}

.unread:after {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background: red;
  content: "";
  position: absolute;
  left: 100%;
  top: 0;
}
.item-all {
  margin-top: 26rpx;
}
