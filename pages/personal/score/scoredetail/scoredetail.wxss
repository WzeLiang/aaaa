/* pages/personal/addrelation/addrelation.wxss */

.score {
  padding: 30rpx;
}

.form-item {
  border-bottom: 1rpx solid rgb(229, 229, 229);
  padding: 25rpx 0;
  display: flex;
  letter-spacing: 2rpx;
  justify-content: space-between;
}

.form-itemnew {
  border-bottom: 1rpx solid rgb(229, 229, 229);
  display: flex;
  letter-spacing: 2rpx;
  justify-content: space-between;
}

.form-item input {
  direction: rtl;
}

.score-info, .score-fraction {
  margin-top: 20rpx;
}

.score-info textarea {
  border: 1rpx solid rgb(229, 229, 229);
  margin-top: 20rpx;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

image {
  width: 15%;
  height: 55rpx;
  top: 47.5rpx;
  margin-left: 50rpx;
}

.comment1-description {
  margin-top: 35rpx;
}

.comment1-description1 {
  font-family: PingFangSC-Regular;
  font-size: 50rpx;
  color: #eac100;
  margin-left: 30rpx;
  right: 20px;
}

.star-pos {
  position: absolute;
  /* right: 100px; */
  margin-right: 40rpx;
}

.comment1-description .star-pos .hideStar {
  z-index: 2;
  /* http://imgbase64.duoshitong.com/ 采用imgbase64将image包下的图片 score_white.png 转换*/
  background-image: url('data:image/png;base64,');
  width: 83rpx;
  height: 43rpx;
  background-size: 43rpx 43rpx;
  background-position: center center;
  background-repeat: no-repeat;
}

.starsM {
  z-index: 1;
  width: 83rpx;
  height: 43rpx;
  /* http://imgbase64.duoshitong.com/ 采用imgbase64将image包下的图片 score_yellow.png 转换*/
  background-image: url('data:image/png;base64,');
  background-size: 43rpx 43rpx;
  background-position: center center;
  background-repeat: no-repeat;
}

.score {
  right: 20px;
  color: #eac100;
}

.list {
  padding: 0 40rpx 40rpx 40rpx;
}

.item {
  margin: 60rpx 0 60rpx;
}

.item-date text {
  font-size: 28rpx;
  color: white;
  background: rgb(211, 211, 211);
  height: 60rpx;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
}

.item-box {
  box-shadow: #bfbfbf 0px 0px 10px;
  margin-top: 40rpx;
}

.item-box>.img>image {
  width: 100%;
  height: 350rpx;
}

.item-box .content {
  box-shadow: 0px 8px 20px #a1a1a1;
  margin-top: 20rpx;
  background: white;
  padding: 30rpx;
  font-size: 36rpx;
  letter-spacing: 0.5rpx;
  border-radius: 10rpx;
}

.title-h3 {
  font-size: 40rpx;
  font-weight: 600;
}

.pro-box {
  display: flex;
  flex-flow: wrap;
  border-bottom: 1px solid rgb(229, 229, 229);
}

.pro-item {
  width: 187.5rpx;
  height: 200rpx;
  box-sizing: border-box;
  /* border: solid 1rpx red; */
  text-align: center;
  vertical-align: middle;
  font-size: 28rpx;
  color: rgb(102, 102, 102);
}

.pro-item image {
  margin-top: 30rpx;
  width: 80rpx;
  height: 80rpx;
}

.class-msg {
  padding: 30rpx 20rpx;
}

.class-msg .msg-head {
  line-height: 45rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}

.title-h3 {
  font-size: 40rpx;
  font-weight: 600;
}

.more {
  font-size: 30rpx;
  color: rgb(102, 102, 102);
}

.msg-content .content-item {
  border-bottom: 1rpx solid rgb(229, 229, 229);
  padding: 20rpx 0;
}

.msg-content .content-item .item-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.msg-content .content-item .item-title .title-classnumb {
  font-size: 40rpx;
  font-weight: 100;
}

.msg-content .content-item .item-title .title-date {
  font-size: 30rpx;
  vertical-align: text-bottom;
  line-height: 50rpx;
}

.msg-content .content-item .item-info {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: auto;
  overflow: hidden;
  font-size: 32rpx;
  letter-spacing: 0.5rpx;
  line-height: 50rpx;
  text-indent: 60rpx;
  text-align: left;
}

.unread {
  position: relative;
}

.unread:after {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background: red;
  content: "";
  position: absolute;
  left: 100%;
  top: 0;
}

.title-name {
  color: green;
  font-size: 35rpx;
  vertical-align: text-bottom;
  line-height: 50rpx;
}

.title-score {
  color: #eac100;
  font-size: 40rpx;
}

.img image {
  width: 150%;
  height: 100rpx;
  border-radius: 57rpx;
  right: 200px;
}

.flex-wrp {
  display: flex;
  flex-direction: row;
}

.bc_left {
  width: 100px;
  height: 100px;
}

.bc_right {
  left: 50px;
}
